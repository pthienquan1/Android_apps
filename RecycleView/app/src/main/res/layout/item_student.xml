<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_ava"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_man_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/txt_sdtudentId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_ava"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/txt_fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/txt_sdtudentId"
       app:layout_constraintTop_toBottomOf="@id/txt_sdtudentId"
        app:layout_constraintStart_toStartOf="@id/txt_sdtudentId"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/txt_gpa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/txt_fullName"
        app:layout_constraintTop_toBottomOf="@id/txt_fullName"
        app:layout_constraintStart_toStartOf="@id/txt_fullName"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

